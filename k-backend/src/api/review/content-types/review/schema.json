{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "review",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "rating": {
      "required": true,
      "max": 10,
      "min": 1,
      "type": "integer"
    },
    "body": {
      "type": "blocks",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "drama": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::drama.drama",
      "inversedBy": "reviews"
    },
    "username": {
      "type": "string",
      "required": true
    }
  }
}
